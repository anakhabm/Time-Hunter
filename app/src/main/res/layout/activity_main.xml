<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/tapmebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tapMeButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.499"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/yourScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/gameScoreTextView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/timeLeftTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>